<div id="login-form">
<%= form_tag('/fake') do %>
<table>
<tr>
    <td style="text-align:right;"><label for="username"><%=l(:field_login)%>:</label></td>
    <td style="text-align:left;"><%= select_tag "username", options_from_collection_for_select(@users, "login", "name") %></td>
</tr>
<tr>
    <td style="text-align:left;"></td>
    <td style="text-align:right;"><input type="submit" name="login" value="<%=l(:button_login)%> &#187;" tabindex="5"/></td>
</tr>
</table>
<% end %>
</div>
